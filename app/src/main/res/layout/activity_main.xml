<?xml version="1.0" encoding="utf-8"?>
<com.bedrock.zhihu_banner_switch.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="top view"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@color/color_yellow"
            android:textColor="@color/color_red"
            android:layout_width="match_parent"
            android:layout_height="600dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/iv_purple"
                android:src="@color/color_purple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_orange"
                android:src="@color/color_orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView
            android:text="bottom view"
            android:textSize="30sp"
            android:background="@color/color_black"
            android:gravity="center"
            android:textColor="@color/color_green_light"
            android:layout_width="match_parent"
            android:layout_height="600dp"/>


    </LinearLayout>

</com.bedrock.zhihu_banner_switch.MyScrollView>